@model DeigCrud.Models.DoViewModel

<h1>Delete Page</h1>
<form asp-controller="Online" method="post" role="form">
    <main role="main" class="pb-3">
        <!--  <a asp-action="Create" class="btn btn-group-sm btn-link">Add a new meeting</a>-->
        <!-- meeting list here-->
        <table class="table table-bordered table-sm table-striped">
            <thead>
                <tr>
                    <th>Zoom Id</th>
                    <th>Day</th>
                    <th>Time</th>
                    <th>Group Name</th>
                    <th>Meeting Id</th>
                    <th>Password</th>
                    <th>Telephone</th>
                    <th>Notes</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OnlineListModel == null)
                {
                    <tr><td colspan="10" class="text-center">No Meeting Lsit for that selection</td></tr>
                }
                else
                {
                    <!-- Begin of table -->
                    @foreach (var m in Model.OnlineListModel)
                    {
                        <!-- Begin of table -->
                        <tr>
                            <td>@m.zoomid</td>
                            <td>@m.day</td>
                            <td>@m.time</td>
                            <td>@m.groupname</td>
                            <td>@m.meetingid</td>
                            <td>@m.pswd</td>
                            <td>@m.telephone</td>
                            <td>@m.notes</td>
                            <td>
                                <div class="text-center panel-body">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <hr />
        <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
        <hr />
        <h2>@ViewBag.Result</h2>
    </main>
</form>