@model DeigCrud.Models.DoViewModel

<h1>Delete Page</h1>
<form method="post" >
    <!-- role="form" ProcessForm asp-action="ProcessForm" -->
    <!-- <form method="post" role="form" action="/Online/ProcessForm"> from page source -->
    <main role="main" class="pb-3">
        <!--  <a asp-action="Create" class="btn btn-group-sm btn-link">Add a new meeting</a>-->
        <!-- meeting list here-->
        <table class="table table-bordered table-sm table-striped">
            <thead>
                <tr>
                    <th>Zoom Id</th>
                    <th>Day</th>
                    <th>Time</th>
                    <th>Group Name</th>
                    <th>Meeting Id</th>
                    <th>Password</th>
                    <th>Telephone</th>
                    <th>Notes</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OnlineListModel == null)
                {
                    <tr><td colspan="10" class="text-center">No Meeting Lsit for that selection</td></tr>
                }
                else
                {
                    <!-- Begin of table -->
                    @foreach (var m in Model.OnlineListModel)
                    {
                        <!-- Begin of table -->
                        <tr>
                            <td>@m.zoomid</td>
                            <td>@m.day</td>
                            <td>@m.time</td>
                            <td>@m.groupname</td>
                            <td>@m.meetingid</td>
                            <td>@m.pswd</td>
                            <td>@m.telephone</td>
                            <td>@m.notes</td>
                            <td>
                                <div class="text-center panel-body">
                                    <input type="submit" name="Delete" value="Delete" formaction="Delete" class="btn btn-sm btn-danger" />
                                    <input type="submit" value="Cancel" asp-controller="Online" asp-action="Cancel" class="btn btn-sm btn-secondary" />
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <hr />
        <h3>@ViewBag.Result</h3>
        <hr />
        
    </main>
</form>