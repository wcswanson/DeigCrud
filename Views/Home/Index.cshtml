@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DEIG - Meeting List</title>
    <!-- check the path for added bootstrap -->
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="container">
            <h1>Index</h1>
            <h2>@Model.FormResult </h2>
            <h2>@ViewBag.Result</h2>
            <form asp-controller="Home" method="post" role="form">
                <main role="main" class="pb-3">
                    <div class="form-inline">
                        <div class="form-group">
                            <div class="col-sm-2">
                                <label class="control-label">Suspended (True)</label>
                                <select asp-for="SuspendSelect" asp-items="Model.Suspended">
                                    <option value="0">False</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2">
                                <label class="control-label">Day</label>
                                <select asp-for="DOWSelect" class="form-control" asp-items="@(new SelectList(@Model.DOWModel, "Value", "Text"));">
                                    <option value="8">All</option>
                                </select>
                            </div>
                        </div>

                        <!-- Time of Day -->
                        <div class="form-group">
                            <div class="col-sm-3">
                                <label class="control-label">Time</label>
                                <select asp-for="TimeSelect" class="form-control" asp-items="@(new SelectList(@Model.TimeModel, "Value", "Text"))">
                                    <option value="-">All</option>
                                </select>
                            </div>
                        </div>

                        <!-- Town -->
                        <div class="form-group">
                            <div class="col-sm-3" id="filter-value-group">
                                <label class="control-label">Town</label>
                                <!-- Add Select Town -->
                                <select asp-for="TownSelect" class="form-control" asp-items="@(new SelectList(@Model.TownModel, "Value", "Text"))">
                                    <option value="-">Select Town</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                <input id="Submit1" type="submit" value="Get Selection" />
                            </div>
                        </div>
                        <a asp-action="Create" class="btn btn-group-sm btn-link">Add a new meeting</a>
                    </div>
                    <!-- meeting list here-->
                    <table class="table table-bordered table-sm table-striped">
                        <thead>
                            <tr>
                                <th>List Id</th>
                                <th>Suspend</th>
                                <th>Day</th>
                                <th>Time</th>
                                <th>Town</th>
                                <th>Group Name</th>
                                <th>Information</th>
                                <th>Location</th>
                                <th>Type</th>
                                <th>Update : Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListModel == null)
                            {
                                <tr><td colspan="8" class="text-center">No Meeting Lsit for that selection</td></tr>
                            }
                            else
                            {
                                @foreach (var m in Model.ListModel)
                                {
                                    <tr>
                                        <td>@m.ListID</td>
                                        <td>@m.suspend</td>
                                        <td>@m.Day</td>
                                        <td>@m.Time</td>
                                        <td>@m.Town</td>
                                        <td>@m.GroupName</td>
                                        <td>@m.Information</td>
                                        <td>@m.Location</td>
                                        <td>@m.Type</td>
                                        <td>
                                            <a asp-action="Update" class="btn btn-sm btn-link" asp-route-id="@m.ListID">Update</a>
                                            <a asp-action="Delete" class="btn btn-sm btn-link" asp-route-id="@m.ListID">Delete</a>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </main>
            </form>
        </div>
    </div>
</body>
</html>