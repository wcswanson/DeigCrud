@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DEIG - Update Meeting List</title>
    <!-- check the path for added bootstrap -->
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- No <form> on page-->
    <div class="container">
        <form asp-controller="Home" method="post" role="form">
           <main role="main" class="pb-3">
           <!--  <a asp-action="Create" class="btn btn-group-sm btn-link">Add a new meeting</a>-->
            <!-- meeting list here-->
            <table class="table table-bordered table-sm table-striped">
                <thead>
                    <tr>
                        <th>ListId</th>
                        <th>SuspendId</th>                        
                        <th>Day Id</th>
                        <th>Day</th>
                        <th>TimeId</th>
                        <th>Time</th>
                        <th>Town</th>
                        <th>Town</th>
                        <th>Group Name</th>
                        <th>Information Txt</th>
                        <th>Information</th>
                        <th>Location Txt</th>
                        <th>Location</th>
                        <th>Type Txt</th>
                        <th>Type</th>
                        <th>Update : Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListModel == null)
                    {
                        <tr><td colspan="5" class="text-center">No Meeting Lsit for that selection</td></tr>
                    }
                    else
                    {
                        @foreach (var m in Model.ListModel)
                        {
                            <!-- Begin of table -->
                            <tr>
                                <td>
                                   <div class="form-group">
                                        <input asp-for="ListIdSelect" class="form-control" value="@m.ListID" />
                                    </div>
                                </td>
                                <td>
                                    <!--<select asp-for="SuspendSelect" asp-items="Model.Suspended"></select>-->
                                    <select asp-for="SuspendSelect" asp-items="@Model.Suspended">
                                        <option value="@m.suspend">@m.suspend</option>
                                    </select>
                                </td>
                               
                                <td>
                                    <!-- <select asp-for="DOWSelect" class="form-control" asp-items="@*@(new SelectList(@Model.DOWModel, "Value"*@, "Text"));"> -->
                                    <select asp-for="DOWSelect" class="form-control" asp-items="@(new SelectList(@Model.DOWModel, "Value", "Text"));">
                                        <option value="@m.DOW">@m.Day</option>
                                    </select>
                                </td>
                                <td>@m.Day</td>
                                <td>
                                    <select asp-for="TimeSelect" class="form-control" asp-items="@(new SelectList(@Model.TimeModel, "Value", "Text"))">
                                       <option value="@m.TimeID">@m.Time</option>                                     </select>
                                </td>
                                <td>@m.Time</td>
                                <td>
                                    <select asp-for="TownSelect" class="form-control" asp-items="@(new SelectList(@Model.TownModel, "Value", "Text"))">
                                        <option value="@m.Town">@m.Town</option>
                                    </select>
                                </td>
                                <td>@m.Town</td>
                                <td>
                                    <input asp-for="GroupNameSelect" class="form-control" value="@m.GroupName" />
                                </td>

                                <td>
                                    <div class="form-group">
                                        <input asp-for="InformationSelect" class="form-control" value="@m.Information" />
                                    </div>
                                </td>
                                <td>@m.Information</td>
                                <td>
                                    <div class="form-group">
                                        <input asp-for="LocationSelect" class="form-control" value="@m.Location" />
                                    </div>
                                </td>
                                <td>@m.Location</td>
                                <td>
                                    <div class="form-group">
                                        <input asp-for="TypeSelect" class="form-control" value="@m.Type" />
                                    </div>
                                </td>
                                <td>@m.Type</td>
                                <td>
                                    <!--     <button type="submit" class="btn btn-sm btn-primary>Update</button> -->

                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="form-inline">
                <div class="text-center panel-body">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
                </div>
                <div class="text-center panel-body">
                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                </div>

            </div>


        </main>
    </form>
</div>
    
</body>
</html>